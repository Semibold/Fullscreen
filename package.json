{
  "name": "@semibold/fullscreen",
  "version": "2.1.0",
  "description": "JavaScript Fullscreen API. Support different frames(documents)",
  "browser": "dist/release/fullscreen.js",
  "types": "src/index.ts",
  "scripts": {
    "build": "npm run tslint && webpack --mode=production --devtool=source-map",
    "start": "webpack -w --mode=development --devtool=cheap-module-eval-source-map",
    "tslint": "tslint -p ./ ./**/*.ts ./**/*.tsx",
    "pretty": "prettier --write ./{docs,src,test,types}/**/*.{js,jsx,ts,tsx,css,less,json,md}",
    "version": "npm run build && git add -A dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Semibold/Fullscreen.git"
  },
  "keywords": [
    "browser",
    "fullscreen"
  ],
  "author": "Aqours",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Semibold/Fullscreen/issues"
  },
  "homepage": "https://github.com/Semibold/Fullscreen#readme",
  "engines": {
    "node": ">=8.9.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "npm run tslint"
    }
  },
  "prettier": {
    "printWidth": 120
  },
  "devDependencies": {
    "@types/node": "10.9.4",
    "event-hooks-webpack-plugin": "2.1.0",
    "git-rev-sync": "1.12.0",
    "husky": "1.0.0-rc.13",
    "prettier": "1.14.2",
    "pretty-quick": "1.6.0",
    "rimraf": "2.6.2",
    "ts-loader": "5.0.0",
    "tslint": "5.11.0",
    "typescript": "3.0.3",
    "uglifyjs-webpack-plugin": "1.3.0",
    "webpack": "4.16.3",
    "webpack-bundle-analyzer": "2.13.1",
    "webpack-cli": "3.1.0"
  }
}
