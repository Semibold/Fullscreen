{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "module": "umd",
    "moduleResolution": "node",
    "target": "es5",
    "outDir": "./dist/",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "dom",
      "es5",
      "es6",
      "scripthost",
      "es2015"
    ]
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}